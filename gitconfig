[alias]
    ane = cm --amend --no-edit
    ap = add -p
    b = branch
    bn = rev-parse --abbrev-ref HEAD
    bv = branch -v
    cl = clone
    cln = clean -xdn
    clf = clean -xdf
    cm = commit
    co = checkout
    cp = cherry-pick
    d = diff
    ds = diff --staged
    pb = "!git push -u origin $(git bn)"
    pbf = "!git push -u origin $(git bn) --force-with-lease"
    o = !sh -lc 'git_open'
    st = status
