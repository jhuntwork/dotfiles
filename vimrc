" misc / basic
set ruler
set backspace=2
set nocompatible
set encoding=utf-8
"set number

" colors / schemes
syntax on
colorscheme railscasts
set t_Co=256

" indenting
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

" SEARCH highlight
set incsearch
set hlsearch

" Cursor highlight
set cursorline
"set cursorcolumn

" Show hidden chars
"set invlist
